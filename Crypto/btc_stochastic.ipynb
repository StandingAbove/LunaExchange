    "# BTC Stochastic + SMA Backtest (Clean Version)\n",
    "\n",
    "This notebook implements two models:\n",
    "1. **SMA trend model** tuned to beat BTC buy-and-hold by a small Sharpe margin.\n",
    "2. **OU stochastic mean-reversion model** with simple parameter search.\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "906d1d23",
   "metadata": {},
   "outputs": [],
   "source": [
    "import warnings\n",
    "from itertools import product\n",
    "from pathlib import Path\n",
    "\n",
    "import matplotlib.pyplot as plt\n",
    "import numpy as np\n",
    "import pandas as pd\n",
    "import seaborn as sns\n",
    "\n",
    "warnings.filterwarnings('ignore')\n",
    "plt.style.use('seaborn-v0_8-darkgrid')\n",
    "pd.set_option('display.float_format', lambda x: f'{x:,.4f}')\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# --- Data loading ---\n",
    "# Put BTC.csv in this folder (Crypto/) or provide full path below.\n",
    "DATA_CANDIDATES = [\n",
    "    Path('BTC.csv'),\n",
    "    Path('Crypto/BTC.csv'),\n",
    "    Path('/Users/samgeng14/Desktop/Quant Data/Cryptocurrency/BTC.csv'),\n",
    "]\n",
    "\n",
    "\n",
    "def load_price_data(candidates):\n",
    "    data_path = next((p for p in candidates if p.exists()), None)\n",
    "    if data_path is None:\n",
    "        raise FileNotFoundError(\n",
    "            'BTC.csv not found. Update DATA_CANDIDATES to a valid file path.'\n",
    "        )\n",
    "\n",
    "    df = pd.read_csv(data_path)\n",
    "\n",
    "    # Flexible column mapping\n",
    "    col_map = {c.lower(): c for c in df.columns}\n",
    "    date_col = col_map.get('date')\n",
    "    price_col = col_map.get('price') or col_map.get('close') or col_map.get('adj close')\n",
    "\n",
    "    if date_col is None or price_col is None:\n",
    "        raise ValueError('CSV must include Date and Price/Close columns.')\n",
    "\n",
    "    out = (\n",
    "        df[[date_col, price_col]]\n",
    "        .rename(columns={date_col: 'Date', price_col: 'Price'})\n",
    "        .assign(Date=lambda x: pd.to_datetime(x['Date']))\n",
    "        .sort_values('Date')\n",
    "        .dropna()\n",
    "        .reset_index(drop=True)\n",
    "    )\n",
    "    out['ret'] = out['Price'].pct_change()\n",
    "    return out.dropna().reset_index(drop=True), data_path\n",
    "\n",
    "\n",
    "btc, used_path = load_price_data(DATA_CANDIDATES)\n",
    "print(f'Loaded {len(btc):,} rows from: {used_path}')\n",
    "btc.head()\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# --- Shared metrics ---\n",
    "\n",
    "print(\"Hello\")\n",
    "def sharpe_ratio(returns, annualization=252):\n",
    "    vol = returns.std()\n",
    "    if vol == 0 or np.isnan(vol):\n",
    "        return np.nan\n",
    "    return (returns.mean() / vol) * np.sqrt(annualization)\n",
    "\n",
    "df = pd.read_csv('/Users/samgeng14/Desktop/Quant Data/Cryptocurrency/BTC.csv')\n"
    "\n",
    "def equity_curve(returns):\n",
    "    return (1 + returns.fillna(0)).cumprod()\n",
    "\n",
    "\n",
    "benchmark_sharpe = sharpe_ratio(btc['ret'])\n",
    "print(f'BTC Buy & Hold Sharpe: {benchmark_sharpe:.4f}')\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "32403081",
   "metadata": {},
   "outputs": [],
   "source": []
   "source": [
    "# --- Model 1: SMA trend model (target: slightly > buy-and-hold Sharpe) ---\n",
    "\n",
    "\n",
    "def run_sma_search(df):\n",
    "    fast_windows = [10, 14, 20, 30]\n",
    "    slow_windows = [50, 80, 100, 128, 160]\n",
    "    long_weights = [1.0, 1.1, 1.2, 1.3]\n",
    "    short_weights = [0.0, 0.2, 0.4, 0.6]\n",
    "\n",
    "    rows = []\n",
    "    for f, s, lw, sw in product(fast_windows, slow_windows, long_weights, short_weights):\n",
    "        if f >= s:\n",
    "            continue\n",
    "\n",
    "        tmp = df.copy()\n",
    "        tmp['ma_fast'] = tmp['Price'].rolling(f).mean()\n",
    "        tmp['ma_slow'] = tmp['Price'].rolling(s).mean()\n",
    "        tmp = tmp.dropna().copy()\n",
    "\n",
    "        signal = np.where(tmp['ma_fast'] > tmp['ma_slow'], lw, sw)\n",
    "        tmp['w'] = pd.Series(signal, index=tmp.index).shift(1)\n",
    "        tmp = tmp.dropna().copy()\n",
    "\n",
    "        tmp['strat_ret'] = tmp['w'] * tmp['ret']\n",
    "        s_sharpe = sharpe_ratio(tmp['strat_ret'])\n",
    "        b_sharpe = sharpe_ratio(tmp['ret'])\n",
    "\n",
    "        rows.append(\n",
    "            {\n",
    "                'fast': f,\n",
    "                'slow': s,\n",
    "                'long_w': lw,\n",
    "                'short_w': sw,\n",
    "                'strat_sharpe': s_sharpe,\n",
    "                'buy_hold_sharpe': b_sharpe,\n",
    "                'delta': s_sharpe - b_sharpe,\n",
    "                'total_return': equity_curve(tmp['strat_ret']).iloc[-1] - 1,\n",
    "                'benchmark_return': equity_curve(tmp['ret']).iloc[-1] - 1,\n",
    "            }\n",
    "        )\n",
    "\n",
    "    res = pd.DataFrame(rows).dropna().sort_values('strat_sharpe', ascending=False)\n",
    "\n",
    "    # \"Slightly higher\" filter: positive delta but not too large\n",
    "    target = res[(res['delta'] > 0.00) & (res['delta'] <= 0.25)]\n",
    "    if not target.empty:\n",
    "        best = target.sort_values('delta').iloc[0]\n",
    "    else:\n",
    "        best = res.iloc[0]\n",
    "\n",
    "    return res, best\n",
    "\n",
    "\n",
    "sma_results, best_sma = run_sma_search(btc)\n",
    "print('Best SMA configuration (slightly > buy-and-hold Sharpe target):')\n",
    "display(pd.DataFrame([best_sma]))\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Build final SMA series with best params\n",
    "f = int(best_sma['fast'])\n",
    "s = int(best_sma['slow'])\n",
    "lw = float(best_sma['long_w'])\n",
    "sw = float(best_sma['short_w'])\n",
    "\n",
    "sma_df = btc.copy()\n",
    "sma_df['ma_fast'] = sma_df['Price'].rolling(f).mean()\n",
    "sma_df['ma_slow'] = sma_df['Price'].rolling(s).mean()\n",
    "sma_df = sma_df.dropna().copy()\n",
    "sma_df['sma_weight'] = np.where(sma_df['ma_fast'] > sma_df['ma_slow'], lw, sw)\n",
    "sma_df['sma_weight'] = sma_df['sma_weight'].shift(1)\n",
    "sma_df = sma_df.dropna().copy()\n",
    "sma_df['sma_ret'] = sma_df['sma_weight'] * sma_df['ret']\n",
    "\n",
    "sma_df['SMA Strategy'] = equity_curve(sma_df['sma_ret'])\n",
    "sma_df['BTC Buy & Hold'] = equity_curve(sma_df['ret'])\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# --- Model 2: OU stochastic mean-reversion model ---\n",
    "\n",
    "def run_ou_search(df):\n",
    "    horizons = {'1mo': 21, '2mo': 42, '4mo': 84}\n",
    "    thetas = np.linspace(0.01, 0.30, 8)\n",
    "    sigmas = np.linspace(0.02, 0.12, 8)\n",
    "\n",
    "    rows = []\n",
    "    for h_name, win in horizons.items():\n",
    "        tmp = df.copy()\n",
    "        tmp['mu'] = tmp['Price'].rolling(win).mean()\n",
    "        tmp = tmp.dropna().copy()\n",
    "\n",
    "        for theta, sigma in product(thetas, sigmas):\n",
    "            raw_w = (theta * (tmp['mu'] - tmp['Price'])) / (sigma ** 2)\n",
    "            tmp['w'] = raw_w.shift(1).clip(-2, 2)\n",
    "            tmp2 = tmp.dropna().copy()\n",
    "            tmp2['strat_ret'] = tmp2['w'] * tmp2['ret']\n",
    "\n",
    "            rows.append(\n",
    "                {\n",
    "                    'horizon': h_name,\n",
    "                    'window': win,\n",
    "                    'theta': float(theta),\n",
    "                    'sigma': float(sigma),\n",
    "                    'sharpe': sharpe_ratio(tmp2['strat_ret']),\n",
    "                    'total_return': equity_curve(tmp2['strat_ret']).iloc[-1] - 1,\n",
    "                }\n",
    "            )\n",
    "\n",
    "    res = pd.DataFrame(rows).dropna().sort_values('sharpe', ascending=False)\n",
    "    return res, res.iloc[0]\n",
    "\n",
    "\n",
    "ou_results, best_ou = run_ou_search(btc)\n",
    "print('Best OU configuration:')\n",
    "display(pd.DataFrame([best_ou]))\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Build final OU series with best params\n",
    "win = int(best_ou['window'])\n",
    "theta = float(best_ou['theta'])\n",
    "sigma = float(best_ou['sigma'])\n",
    "\n",
    "ou_df = btc.copy()\n",
    "ou_df['mu'] = ou_df['Price'].rolling(win).mean()\n",
    "ou_df = ou_df.dropna().copy()\n",
    "ou_df['ou_weight'] = ((theta * (ou_df['mu'] - ou_df['Price'])) / (sigma ** 2)).shift(1).clip(-2, 2)\n",
    "ou_df = ou_df.dropna().copy()\n",
    "ou_df['ou_ret'] = ou_df['ou_weight'] * ou_df['ret']\n",
    "\n",
    "ou_df['OU Strategy'] = equity_curve(ou_df['ou_ret'])\n",
    "ou_df['BTC Buy & Hold'] = equity_curve(ou_df['ret'])\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# --- Comparison output (clean formatting) ---\n",
    "summary = pd.DataFrame(\n",
    "    {\n",
    "        'Model': ['SMA Strategy', 'OU Strategy', 'BTC Buy & Hold'],\n",
    "        'Sharpe': [\n",
    "            sharpe_ratio(sma_df['sma_ret']),\n",
    "            sharpe_ratio(ou_df['ou_ret']),\n",
    "            sharpe_ratio(btc['ret']),\n",
    "        ],\n",
    "        'Total Return %': [\n",
    "            (sma_df['SMA Strategy'].iloc[-1] - 1) * 100,\n",
    "            (ou_df['OU Strategy'].iloc[-1] - 1) * 100,\n",
    "            (equity_curve(btc['ret']).iloc[-1] - 1) * 100,\n",
    "        ],\n",
    "    }\n",
    ")\n",
    "\n",
    "display(summary.style.format({'Sharpe': '{:.4f}', 'Total Return %': '{:.2f}%'}))\n",
    "\n",
    "fig, axes = plt.subplots(1, 2, figsize=(16, 5))\n",
    "\n",
    "axes[0].plot(sma_df['Date'], sma_df['SMA Strategy'], label='SMA Strategy', linewidth=2)\n",
    "axes[0].plot(sma_df['Date'], sma_df['BTC Buy & Hold'], '--', label='BTC Buy & Hold', alpha=0.8)\n",
    "axes[0].set_title('Model 1: SMA vs Buy & Hold')\n",
    "axes[0].set_xlabel('Date')\n",
    "axes[0].set_ylabel('Growth of $1')\n",
    "axes[0].legend()\n",
    "\n",
    "axes[1].plot(ou_df['Date'], ou_df['OU Strategy'], label='OU Strategy', linewidth=2, color='tab:orange')\n",
    "axes[1].plot(ou_df['Date'], ou_df['BTC Buy & Hold'], '--', label='BTC Buy & Hold', alpha=0.8)\n",
    "axes[1].set_title('Model 2: OU vs Buy & Hold')\n",
    "axes[1].set_xlabel('Date')\n",
    "axes[1].set_ylabel('Growth of $1')\n",
    "axes[1].legend()\n",
    "\n",
    "plt.tight_layout()\n",
    "plt.show()\n",
    "\n",
    "# Optional: heatmap for OU sharpe by best horizon\n",
    "best_h = best_ou['horizon']\n",
    "heat = ou_results[ou_results['horizon'] == best_h].pivot(index='theta', columns='sigma', values='sharpe')\n",
    "plt.figure(figsize=(9, 6))\n",
    "sns.heatmap(heat, cmap='mako', annot=True, fmt='.2f')\n",
    "plt.title(f'OU Sharpe Heatmap ({best_h})')\n",
    "plt.show()\n"
   ]
  }
